  <extension
         point="org.eclipse.photran.ui.sourceViewerConfig">
      <sourceViewerConfig
            factory="ui.FortranSourceViewerConfigurationFactory">
      </sourceViewerConfig>
   </extension>
   <extension
        id="propertiesFileAuditor"
        point="org.eclipse.core.resources.builders">
     <builder
           hasNature="true">
        <run
              class="keywordcheck.PropertiesFileAuditor">
        </run>
     </builder>
  </extension>
  <extension
        point="org.eclipse.ui.ide.markerResolution">
     <markerResolutionGenerator
           class="keywordcheck.KeywordMarkerResolutionGenerator"
           markerType="org.eclipse.photran.KeywordCheck.photrankeywordmarker">
     </markerResolutionGenerator>
  </extension>
  <extension
        id="photrankeywordmarker"
        name="Photran Keyword Warning Marker"
        point="org.eclipse.core.resources.markers">
     <super
           type="org.eclipse.core.resources.problemmarker">
     </super>
     <super
           type="org.eclipse.core.resources.textmarker">
     </super>
     <persistent
           value="true">
     </persistent>
     <attribute
           name="keyword">
     </attribute>
     <attribute
           name="violation">
     </attribute>
  </extension>
